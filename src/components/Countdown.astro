---
import type { Shape } from './enums';

export interface Props {
  title: string;
  datetime: string,
  shape: Shape,
}

const {
  title,
  datetime,
  shape,
} = Astro.props;

const targetDate = new Date(datetime);
const targetId = `${title}-${datetime}`;
console.log(targetId);
---

